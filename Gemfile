source :rubygems

# Sinatra Related
gem "sinatra"

# Datamapper
gem "data_mapper" # dm-core, dm-aggregate, dm-constraints, dm-migrations, etc

# Development Environment  
group :development do
  gem "dm-sqlite-adapter"
  gem "shotgun"
end

# Production Environment
group :production do
  gem "dm-postgres-adapter"
  # gem "dm-mysql-adapter"
end

# Templates
gem "slim"

# Sprockets, Sass, Coffee Script
gem "sprockets"
gem "coffee-script"
gem "sass"

# Testing
gem "cucumber"
gem "capybara"
gem "rspec"